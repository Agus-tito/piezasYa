---
// src/layouts/Layout.astro
import { Navbar } from '../components/Navbar';
import ViewTransitions from 'astro/components/ViewTransitions.astro';

const { title } = Astro.props;
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title} - Sistema de Autopartes</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <ViewTransitions/>
  </head>
  <body>
    <Navbar client:load />
    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
      <slot />
    </main>
  </body>
</html>

<style is:global>
	@font-face {
		font-family: "ClashDisplay-Extralight";
		src:
			url("../../public/fonts/clash-display/ClashDisplay-Extralight.woff2") format("woff2"),
			url("../../public/fonts/clash-display/ClashDisplay-Extralight.woff") format("woff");
		font-weight: 200;
		font-display: swap;
		font-style: normal;
	}
	@font-face {
		font-family: "ClashDisplay-Light";
		src:
			url("../../public/fonts/clash-display/ClashDisplay-Light.woff2") format("woff2"),
			url("../../public/fonts/clash-display/ClashDisplay-Light.woff") format("woff"),;
		font-weight: 300;
		font-display: swap;
		font-style: normal;
	}
	@font-face {
		font-family: "ClashDisplay-Regular";
		src:
			url("../../public/fonts/clash-display/ClashDisplay-Regular.woff2") format("woff2"),
			url("../../public/fonts/clash-display/ClashDisplay-Regular.woff") format("woff");
		font-weight: 400;
		font-display: swap;
		font-style: normal;
	}
	@font-face {
		font-family: "ClashDisplay-Medium";
		src:
			url("../../public/fonts/clash-display/ClashDisplay-Medium.woff2") format("woff2"),
			url("../../public/fonts/clash-display/ClashDisplay-Medium.woff") format("woff");
		font-weight: 500;
		font-display: swap;
		font-style: normal;
	}
	@font-face {
		font-family: "ClashDisplay-Semibold";
		src:
			url("../../public/fonts/clash-display/ClashDisplay-Semibold.woff2") format("woff2"),
			url("../../public/fonts/clash-display/ClashDisplay-Semibold.woff") format("woff");
		font-weight: 600;
		font-display: swap;
		font-style: normal;
	}
	@font-face {
		font-family: "ClashDisplay-Bold";
		src:
			url("../../public/fonts/clash-display/ClashDisplay-Bold.woff2") format("woff2"),
			url("../../public/fonts/clash-display/ClashDisplay-Bold.woff") format("woff");
		font-weight: 700;
		font-display: swap;
		font-style: normal;
	}
	@font-face {
		font-family: "ClashDisplay";
		src:
			url("../../public/fonts/clash-display/ClashDisplay-Variable.woff2") format("woff2"),
			url("../../public/fonts/clash-display/ClashDisplay-Variable.woff") format("woff");
		font-weight: 700;
		font-display: swap;
		font-style: normal;
		color: rgba(186, 65, 65, 0.556);
	}
</style>
